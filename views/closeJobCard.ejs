<body> 
  


  <nav class="navbar navbar-dark bg-dark">
    <span class="navbar-brand mb-0 h1" style="padding-left: 0.5rem; color: aliceblue;">Close Job Cards</span>
  </nav>

  <div class="input-group mb-3">
    <input type="text" id="search-box"  onkeyup="sendData(this)" class="form-control" placeholder="Search By Vehicle Number..">
  </div>
   <!-- <input type="text" id="search-box" onkeyup="sendData(this)"> -->
   <section id="searchResults">
    
    <ul class="list-group">
      <%  closeJobCard.forEach(card=>{   %>
        <form action="/completeJobCard/<%=card._id%>" method="get">
          <li class="list-group-item">
            <div class="row">
              <div class="col">
                <h5><%=  card.vehicleNumber %></h5>
                <p> <%=  card.customerName %></p> 
              </div>
              <div class="col" style="text-align: right; padding-top:1rem ;">
                <button class="btn btn-danger">Genarate Bill</button>
              </div>
            </div>
            
          </li>
        </form>  
        <%})%>
    </ul>

   </section>

   <script>
   if(document.getElementById("search-box").value.length == 0)
    {
      console.log("hello");
    }


  

     function sendData(e){
      if(e.value == '' || e.value == undefined)
      {
        console.log("Hii");
      }



      const searchResults = document.getElementById('searchResults');
      let match = e.value.match(/^[a-zA-Z0-9]*/);
      let match2 = e.value.match(/\s*/);
      if(match2[0] == e.value)
      {
        searchResults.innerHTML = '';
        return; 
      }
      if(match[0] == e.value)
      {
        fetch('getCards',{
          method:'POST',
          headers:{'Content-Type' : 'application/json'},
          body:JSON.stringify({payload:e.value})
          }).then(res => res.json()).then(data=>{
              let payload = data.payload;
              console.log(payload);
              searchResults.innerHTML = '';
              if(payload.length < 1)
              {
                searchResults.innerHTML = '<p>No Results Found</p>';
                return;
              }
              payload.forEach((item,index)=>{
                if(index > 0)
                  searchResults.innerHTML += '</hr>';
                searchResults.innerHTML += '<p>'+item.vehicleNumber+'</p>';
              });
            });
            return;
      }
      searchResults.innerHTML = '';
     }
   </script>


  

</body>
